{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "pnpm run test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run Functional Tests",
      "type": "shell",
      "command": "pnpm run test:functional",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Accessibility Tests",
      "type": "shell",
      "command": "pnpm run test:a11y",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Performance Tests",
      "type": "shell",
      "command": "pnpm run test:performance",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Visual Tests",
      "type": "shell",
      "command": "pnpm run test:visual",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Tests (Headed)",
      "type": "shell",
      "command": "pnpm run test-headed",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run Tests (UI Mode)",
      "type": "shell",
      "command": "pnpm run test-ui",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Show Test Report",
      "type": "shell",
      "command": "pnpm run report",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm run lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "build"
    },
    {
      "label": "Lint & Fix",
      "type": "shell",
      "command": "pnpm run lint:fix",
      "problemMatcher": ["$eslint-stylish"],
      "group": "build"
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "pnpm run format",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Check Formatting",
      "type": "shell",
      "command": "pnpm run format:check",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm run type-check",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Update Visual Snapshots",
      "type": "shell",
      "command": "pnpm run snapshots:update",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Approve Visual Snapshots",
      "type": "shell",
      "command": "pnpm run snapshots:approve",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Compare Visual Snapshots",
      "type": "shell",
      "command": "pnpm run snapshots:compare",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}
