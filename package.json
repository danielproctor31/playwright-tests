{
  "name": "playwright-devcontainer",
  "version": "1.0.0",
  "description": "Playwright end-to-end testing project with MCP integration for enhanced test generation and automation",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:functional": "playwright test --grep-invert '@a11y|@performance|@visual'",
    "test:a11y": "playwright test --grep '@a11y'",
    "test:performance": "playwright test --grep '@performance'",
    "test:visual": "playwright test --grep '@visual'",
    "test-headed": "playwright test --headed",
    "test-ui": "playwright test --ui",
    "report": "playwright show-report --host 0.0.0.0",
    "snapshots:update": "playwright test --grep '@visual' --update-snapshots",
    "snapshots:approve": "playwright test --grep '@visual' --update-snapshots",
    "snapshots:compare": "playwright test --grep '@visual' --reporter=list",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky || true"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "typescript",
    "mcp"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.1.0",
    "husky": "^9.1.7",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
